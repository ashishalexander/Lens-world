<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<body>
    <%- include('../user/userNav') %>
    <div class="container-fluid d-flex">
        <div class="sidebar">
            <%- include('profileSidebar') %>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 col-sm-12 ">
                    <div class="container-fluid addAddress p-2 mb-3" style="height:70px;background-color: rgb(255, 255, 255); border: 1px solid #000;">
                        <a href="/profile/addNewAddress">ADD NEW ADDRESS</a>
                    </div>

                    <% data.address.forEach((address,index) => { %>
                        <div class="container-fluid addressbox d-flex justify-content-between p-2 mt-2" style="height:80px;background-color: rgb(218, 214, 214);">
                           <div class="left">
                                <% 
                                // Extracting the first name from the address
                                const parts = address.split(/[, ]+/);
                                const firstName = parts[0];
                                const lastname = parts[1];
                                %>
                                <h6><%= firstName +' '+ lastname %></h6>
                                <p><%= address %></p>
                            </div>
                            <div class="right "style="margin-right: 25px; ">
                                <!-- Use the icon as the dropdown toggle -->
                                <i class="fa-solid fa-ellipsis-vertical" data-bs-toggle="dropdown" aria-expanded="false"></i>
                                <!-- The dropdown menu structure remains the same -->
                                <div class="btn-group dropstart" >
                                    <ul class="dropdown-menu ">
                                        <!-- Dropdown menu links -->
                                        
                                        <a href="/profile/addressEdit/<%= index %>"><div class="item "style="text-align:center">Edit</div></a>
                                        <a href="/profile/addressDelete/<%= index %>"><div class="item mt-2"style="text-align:center">Delete</div></a>
                                       
                                    </ul>
                                </div>
                            </div>
                        </div>
                        
                    <% }); %>
                    
                </div>
            </div>
        </div>
    </div>
    




 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        body{
            background-color: rgb(226, 230, 233);
        }
        .sidebar {
            width: 15%;
            height: 40rem;  
            background-color: rgb(237, 237, 241);
            margin-left: 25px;
        }

        .productList {
            width: 100%;
            background-color: rgb(239, 239, 239);
            height: 35px
        }
        .prtlistcontainer{
            margin-left: 0%;
            padding: 0%;
        }
        .container{
            margin:0%;
            margin-left:0%
        }
        
        ul{
            list-style: none;
        }
       
        .filter{
            padding: 0%;
        }

    </style>    
</head>

<body>

    <%- include('userNav') %>
        <div class="d-flex flex-row mb-5">
            <div class="sidebar">
                <ul class="filter mt-4 ">
                    <li class="ms-2">Brand</li>
                    <hr>
                    <li class="ms-2">Frame Color</li>
                    <hr>
                    <li class="ms-2">Price</li>
                    <hr>
                    <li class="ms-2">Frame Type</li>
                    <hr>
                </ul>
            </div>
            <div class="container-fluid ">
                <div class="container ">
                    <div class="row mt-2 prtlistcontainer">
                        <% prtdata.forEach(element => { %>
                            <div class="col-4 col-sm-4 col-md-4 col-lg-4 mt-3">
                                <div class="card "style="height:420px">
                                    <div class="card-img h-100">
                                        <img src="/<%= element.imageUrl[0] %>" class="card-img-top" alt="...">
                                    </div>
                                    <div class="card-body">
                                        <p><%=element.name%> </p>
                                        <p><%=element.brand%></p>
                                        <p><%=element.price%></p>
                                        <a href="/products/productDetailPg/<%=element._id%> "><button type="button" class="btn btn-primary">Buy Now</button></a>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </div>
            </div>

        </div>
        <%- include('pagination.ejs') %>
        <%- include('userFooter.ejs') %>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
</body>

</html>
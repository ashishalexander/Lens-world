<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        .Mgm{
            
            height: min-content;
            background-color: rgb(213, 220, 220);
        }
        .category-heading {
        transform: translate(-35px, 0); 
        }
      
    </style>
</head>
<body>
    <%- include('adminNav.ejs') %>
    <div class="container-fluid d-flex p-0 ">
        <%- include('adminSidebar.ejs') %>
        <div class="container-fluid p-0">
            <div class="Mgm d-flex container-fluid justify-content-between align-items-center ">
                <form  action="/admin/categoryMgm" method="get">
                    <input type="search" name="search" id="search-input" class="form-control" style="width:300px;" placeholder="Search...">
                </form>
                <p class="category-heading">Category Management</p>
                <a href="/admin/addNewCateg">
                    <button type="button" class="btn btn-outline-primary me-2" data-bs-toggle="modal" data-bs-target="#addProductModal">
                        Add new Category
                    </button>
                </a>
            </div>
            <table class="table table-borderless table-striped">
                <thead class="table-dark">
                    <tr>
                        
                        <th scope="col">category</th>
                        <th scope="col">description</th>
                        <th scope="col">update</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% categoryMgm.forEach(element => { %>
                        <tr>
                            <td scope="col"><%=element.name  %></td>
                            <td scope="col"><%=element.description  %></td>
                            <td>
                                <a href="/admin/edit/<%= element._id %>">
                                    <button type="button" class="btn btn-outline-warning">
                                        Edit
                                    </button>
                                </a>
                            </td>
                            <td>
                                <a href="/admin/delcateg/<%= element._id %>">
                                    <button type="button" class="<%= element.deleted ? "btn btn-outline-success" : "btn btn-outline-danger" %>">
                                        <%= element.deleted ? "Restore" : "Disable" %>

                                    </button>
                                </a>
                            </td>
                        </tr>
                    <% }) %>
                    
                </tbody>
        </div>
        
        
    </div>
    







    




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>
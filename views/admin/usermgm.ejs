<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Document</title>
    <style>
        .manag{
            margin-left: 400px;
        }
       
    </style>
</head>
<body>
    <%- include('adminNav.ejs') %>
      <div class="container-flex">
        <div class="row d-flex flex-row">
            <%- include('adminSidebar.ejs') %>
            <div class="col">
                <div class="search-container  d-flex align-items-center mt-2">
                    <form action="/admin/usermgm" method="get">
                        <input type="search" name="search" id="search-input" class="search-input" placeholder="Search...">
                    </form>
                    <div class="manag">
                        <p style="font-size:larger;font-weight: 700; ">User Management</p>
                    </div>
                    
                    
                </div>
                <div class="usermgm">
                    <table class="table  table-borderless table-striped">
                        <thead class="table-dark " >
                            <tr >
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col" text-center>Address</th>
                                <th scope="col">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                           <% users.forEach(element=>{ %>
                            <tr>
                                <th ><%= element.fname+" "+element.lname %></th>
                                <th ><%= element.email%></th>
                                <th>
                                    <% element.address.forEach(addr => { %>
                                        <%= addr %><br>
                                    <% }) %>
                                </th>
                                <th ><a  href="/admin/userStatus/<%= element._id %>" onclick="changeContent(this)">
                                    <%= element.status?"Active":"Blocked" %>
                                </a></th> 
                            </tr>
                           <%}) %>
                        </tbody>
                   
                    </table>
                </div>
                
            </div>
        </div>

    </div>


    <script>
        function changeContent(button) {
            // Change the content inside the button when clicked
          
            if (button.innerText === 'Active') {
                button.innerText = 'Blocked';
            } else {
                button.innerText = 'Active';
            }
          
            //Optionally, you can add more logic here
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-dQ93IBn5LlpcMzPHnACmNzmG9lAUiMQgH7xGfeNqfEJdFMI5FU71W5jRTl6F2NfN" crossorigin="anonymous"></script>
</body>
</html>